<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Movie Info"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:text="Catagory"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <Spinner
                android:layout_weight="2"
                android:id="@+id/idMovieCatagory"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_gravity="center"></Spinner>
        </LinearLayout>



            <EditText
                android:id="@+id/idMovieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Add Movie Name"/>


            <EditText
                android:id="@+id/idMovieYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Release Year"/>


            <EditText
                android:id="@+id/idMovieDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Add Movie Description"/>



            <EditText
                android:id="@+id/idMovieVideoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Add Youtube Video id"/>


            <EditText
                android:id="@+id/idMovieLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Movie Link 1"/>


            <EditText
                android:id="@+id/idMovieLink1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Add Movie Link 2"/>


            <EditText
                android:id="@+id/idMovieLink2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Add Movie Link 3"/>

        <EditText
            android:id="@+id/idMovieLink3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Add Movie Link 4"/>


            <Button
                android:id="@+id/idMovieImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Movie Image"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>




            <Button
                android:id="@+id/idAddMovie"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Add Movie Now"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>



            <Button
                android:id="@+id/idShowAllMovie"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Show all movie Info"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>


    </LinearLayout>


</ScrollView>
