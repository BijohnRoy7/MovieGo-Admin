<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:text="Movie Name"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/idMovieName_sharedLink"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_marginTop="5dp"
            android:layout_height="30dp"
            android:text="Movie Name"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:text="Catagory"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/idCatagory_sharedLink"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_marginTop="5dp"
            android:layout_height="30dp"
            android:text="Movie Name"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:text="Movie Link"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/idMovieLink_sharedLink"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/idCopy_sharedLink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_content_copy_black_24dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:text="User"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/idUserId_sharedLink"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/idCopyUserId_sharedLink"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_content_copy_black_24dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/idDelete_sharedLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"/>

</LinearLayout>